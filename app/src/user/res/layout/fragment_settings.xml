<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/user_name_tv"
            style="@style/tv.large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_top_margin_large"
            app:layout_constraintStart_toStartOf="@id/guide_start"
            app:layout_constraintTop_toBottomOf="@id/profile_tv"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/user_phone_tv"
            style="@style/tv.small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_top_margin_large"
            android:textColor="@color/font_grey"
            app:layout_constraintStart_toStartOf="@id/user_name_tv"
            app:layout_constraintTop_toBottomOf="@id/user_name_tv"
            tools:text="+91986553219" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/edit_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_outline_edit_24"
            app:contentPadding="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="@id/user_phone_tv"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="@id/guide_end"
            app:layout_constraintTop_toTopOf="@id/user_name_tv"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            app:strokeColor="@color/font_grey"
            app:strokeWidth="1dp" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="@dimen/view_height_large"
            android:layout_marginTop="@dimen/view_top_margin_large"
            android:background="@color/view_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_phone_tv" />

        <TextView
            android:id="@+id/profile_tv"
            style="@style/tv.xtralarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:drawablePadding="@dimen/_8sdp"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/_8sdp"
            android:paddingStart="@dimen/activity_start_margin"
            android:text="My Profile"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/partner_tv"
            style="@style/tv.large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle1"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/activity_start_margin"
            android:paddingVertical="@dimen/view_vertical_padding_normal"
            android:text="Register As Partner"
            app:layout_constraintEnd_toEndOf="@id/guide_end"
            app:layout_constraintStart_toStartOf="@id/guide_start"
            app:layout_constraintTop_toBottomOf="@id/view" />

        <TextView
            android:id="@+id/address_tv"
            style="@style/tv.large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle1"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/activity_start_margin"
            android:paddingVertical="@dimen/view_vertical_padding_normal"
            android:text="Manage Address"
            app:layout_constraintEnd_toEndOf="@id/guide_end"
            app:layout_constraintStart_toStartOf="@id/guide_start"
            app:layout_constraintTop_toBottomOf="@id/partner_tv" />

        <TextView
            android:id="@+id/booking_tv"
            style="@style/tv.large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle1"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/activity_start_margin"
            android:paddingVertical="@dimen/view_vertical_padding_normal"
            android:text="Scheduled Booking"
            app:layout_constraintEnd_toEndOf="@id/guide_end"
            app:layout_constraintStart_toStartOf="@id/guide_start"
            app:layout_constraintTop_toBottomOf="@id/address_tv" />

        <TextView
            android:id="@+id/wallet_tv"
            style="@style/tv.large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle1"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/activity_start_margin"
            android:paddingVertical="@dimen/view_vertical_padding_normal"
            android:text="My Wallet"
            app:layout_constraintEnd_toEndOf="@id/guide_end"
            app:layout_constraintStart_toStartOf="@id/guide_start"
            app:layout_constraintTop_toBottomOf="@id/booking_tv" />

        <TextView
            android:id="@+id/faq_tv"
            style="@style/tv.large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle1"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/activity_start_margin"
            android:paddingVertical="@dimen/view_vertical_padding_normal"
            android:text="FAQ"
            app:layout_constraintEnd_toEndOf="@id/guide_end"
            app:layout_constraintStart_toStartOf="@id/guide_start"
            app:layout_constraintTop_toBottomOf="@id/wallet_tv" />

        <TextView
            android:id="@+id/share_tv"
            style="@style/tv.large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle1"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/activity_start_margin"
            android:paddingVertical="@dimen/view_vertical_padding_normal"
            android:text="Share"
            app:layout_constraintEnd_toEndOf="@id/guide_end"
            app:layout_constraintStart_toStartOf="@id/guide_start"
            app:layout_constraintTop_toBottomOf="@id/faq_tv" />

        <TextView
            android:id="@+id/feedback_tv"
            style="@style/tv.large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle1"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/activity_start_margin"
            android:paddingVertical="@dimen/view_vertical_padding_normal"
            android:text="Feedback"
            app:layout_constraintEnd_toEndOf="@id/guide_end"
            app:layout_constraintStart_toStartOf="@id/guide_start"
            app:layout_constraintTop_toBottomOf="@id/share_tv" />

        <TextView
            android:id="@+id/support_tv"
            style="@style/tv.large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle1"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/activity_start_margin"
            android:paddingVertical="@dimen/view_vertical_padding_normal"
            android:text="Support"
            app:layout_constraintEnd_toEndOf="@id/guide_end"
            app:layout_constraintStart_toStartOf="@id/guide_start"
            app:layout_constraintTop_toBottomOf="@id/feedback_tv" />

        <TextView
            android:id="@+id/rate_tv"
            style="@style/tv.large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle1"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/activity_start_margin"
            android:paddingVertical="@dimen/view_vertical_padding_normal"
            android:text="Rate Us"
            app:layout_constraintEnd_toEndOf="@id/guide_end"
            app:layout_constraintStart_toStartOf="@id/guide_start"
            app:layout_constraintTop_toBottomOf="@id/support_tv" />

        <TextView
            android:id="@+id/logout_tv"
            style="@style/tv.normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/activity_top_margin"
            android:text="Logout"
            android:textColor="@color/red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guide_end"
            app:layout_constraintStart_toStartOf="@id/guide_start"
            app:layout_constraintTop_toBottomOf="@id/rate_tv" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/activity_start_margin" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/activity_end_margin" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>