<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout_single_service"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_end_margin"
    android:orientation="vertical"
    tools:context=".adapters.recycler_view.FirstServicesAdapter">

    <ImageView
        android:id="@+id/service_iv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/service_name_tv"
        style="@style/tv.normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="@dimen/view_top_margin_normal"
        android:gravity="center"
        android:maxLines="2"
        tools:text="Ac Repair and Service" />

</LinearLayout>